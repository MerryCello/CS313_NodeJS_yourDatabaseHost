<%#
This template takes as data:
    i
    id
    name
    description
    price
    img_url
%>
<tr>
    <td>
        <input type="text" name="name" id="name<%= i %>" value="<%= name %>">
    </td>
    <td>
        <!-- <input type="text" name="description" id="description<%= i %>" value="<%= description %>"> -->
        <textarea name="description" id="description<%= i %>" cols="20" rows="1"><%= description %></textarea>
    </td>
    <td>
        <span id="currency">$</span><input type="text" name="price" id="price<%= i %>" size="4" value="<%= price %>">
    </td>
    <td id="img<%= i %>">
        <% if(img_url != null && img_url!="") { %>
            <textarea name="img_url" id="img_url<%= i %>" cols="20" rows="1" onClick="this.select();"><%= img_url %></textarea>
            <a id="imageAnchor<%= i %>" href="<%= img_url %>" target="_blank" rel="noopener noreferrer">image&nbsp;<sup><i class="fas fa-external-link-alt fa-xs"></i></sup></a>
        <% } else { %>
            <textarea name="img_url" id="img_url<%= i %>" cols="20" rows="1" onClick="this.select();"></textarea>
            <span id="imageAnchor<%= i %>">no url provided</span>
        <% } %>
    </td>
    <th scope="row">
        <input id="id<%= i %>" type="hidden" name="id" value="<%= id %>">
                              <!-- validate before enabling save btn (name, description, and price are NOT NULL) -->
        <input id="remove<%= i %>" onclick="remove('<%= i %>');" type="button" class="btn btn-danger"  value="&#10008;"><!-- &#9866; => dash, &#10008; => fancy 'x', &#10006; => 'x'-->
        <input id="edit<%= i %>"   onclick="edit('<%= i %>');"   type="button" class="btn btn-warning" value="EDIT">
        <input id="save<%= i %>"   onclick="save('<%= i %>');"   type="button" class="btn btn-success" value="SAVE">
        <input id="cancel<%= i %>" onclick="cancel('<%= i %>');" type="button" class="btn btn-light"   value="CANCEL">
    </th>
</tr>
<script>
    $('#img_url<%= i %>').hide();
    $('#save<%= i %>').hide();
    $('#cancel<%= i %>').hide();
    $('#name<%= i %>').prop('disabled', true);
    $('#description<%= i %>').prop('disabled', true);
    $('#price<%= i %>').prop('disabled', true);
    bundleRow.push({id: '<%= id %>', name: '<%= name %>', description: '<%= description %>', price: '<%= price %>', img_url: '<%= img_url %>'});
    // alert(JSON.stringify(bundleRow));
</script>
    